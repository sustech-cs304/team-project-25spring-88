{
    "metadata": [
        {
            "src": [
            {
                "src": "..",
                "files": [
                    "Assets/CommonScripts/**/*.cs",
                    "Assets/Editor/**/*.cs",
                    "Assets/GameSystem/**/*.cs",
                    "Assets/Landing/Scripts/**/*.cs",
                    "Assets/Monoplayer/Scripts/**/*.cs",
                    "Assets/Multiplayer/Scripts/**/*.cs"
                ],
                "exclude": [
                    "**/*.Tests.cs",
                    "**/Mirror/**",
                    "**/kcp2k/**",
                    "**/IO.Swagger/**"
                ]
            }
        ],
            "globalNamespaceId": "Global",
            "filter": "filterConfig.yml",
            "dest": "api"
        }
    ],
    "build": {
        "template": ["default"],
        "exportApiNamespaceToc": true,
        "_appStyle": "#navbar { display: none !important; }",
        "globalMetadata": {
            "_appTitle": "SUSTech Racing Car Documentation",
            "_appFooter": "Generated by DocFX"       
        },
        "content": [
            {
                "src": "api",
                "files": [
                    "*.yml"
                ],
                "dest": "./"
            }
        ],
        "overwrite": [
            {
                "src": "..",
                "files": [
                    "Assets/Scripts/**/*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "resources/**/*"
                ]
            }
        ],
        "dest": "../_site",
        "homepage": "toc.html"
    }
}